
<%- include("header") -%>

    <div class="box" id="heading">
      <% if (listTitle === "Saturday" || listTitle === "Sunday") {%>
        <h1 style="color: rgb(30, 220, 20)"><%= listTitle %> ToDo List</h1>
        <% } else { %>
        <h1 style="color: rgb(255, 255, 255); text-align: center">
          <%= listTitle %> ToDo List
        </h1>
        <%};%>
    </div>
    
    <div class="box">
        <% newAddedItem.forEach(function(items){ %>
          <form action="/delete" method="post">
            
            <div class="item">
              <input type="checkbox" name="checkbox" value="<%= items._id %>" onChange="this.form.submit()" > 
              <p><%= items.name %><p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle%>"></input>
          </form>

        <% }); %>

        <form action="/", method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off"  >
            <button type="submit" name = "list" value="<%= listTitle %>">+</button>
        </form>

    </div>
    
    <%- include("footer") -%>
